{
	"name": "Dynamic pipeline",
	"properties": {
		"activities": [
			{
				"name": "Iterations",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.Files",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "MigrateOnPremFiles_copy",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "ParquetSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings",
										"copyBehavior": "MergeFiles"
									},
									"formatSettings": {
										"type": "ParquetWriteSettings"
									}
								},
								"enableStaging": false,
								"translator": {
									"value": "@if(\n    equals(item().name,'DimFlight.csv') ,pipeline().parameters.Flight,\n    if(equals(item().name,'DimPassenger.csv') ,pipeline().parameters.Passenger,\n    pipeline().parameters.AirLine)\n)",
									"type": "Expression"
								}
							},
							"inputs": [
								{
									"referenceName": "ds_source",
									"type": "DatasetReference",
									"parameters": {
										"FileName": {
											"value": "@item().name",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ds_target",
									"type": "DatasetReference",
									"parameters": {
										"FileName": {
											"value": "@{concat(split(item().name, '.')[0], '.parquet')}",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"annotations": [],
		"lastPublishTime": "2025-08-01T12:58:21Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}